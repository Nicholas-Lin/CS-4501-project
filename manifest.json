{
  "name": "PrivaSee",
  "description": "This extension will analyze trackers on websites",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "/adblock/blocked_domains_easy.js",
      "/adblock/blocked_domains_glob_easy.js",
      "/js/background.js"
    ]
  },
  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_popup": "/components/popup.html"
  },
  "icons": {
    "128": "/images/logo_128.png"
  }
}